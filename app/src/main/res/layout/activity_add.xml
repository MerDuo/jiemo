<?xml version="1.0" encoding="utf-8"?>
<!--加号按钮跳转页面-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100sp"
        android:orientation="horizontal"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="35dp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">

            <ImageView
                android:id="@+id/countImg"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/countdown"
                android:onClick="onClick"></ImageView>

            <TextView
                android:id="@+id/countTxt"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="倒计时"
                android:textColor="#000000"
                android:textSize="10sp"
                android:onClick="onClick"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">

            <ImageView
                android:id="@+id/diaryImg"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/handcount"
                android:onClick="onClick"
                android:layout_gravity="center"
                ></ImageView>

            <TextView
                android:id="@+id/diaryTxt"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="写手账"
                android:textColor="#000000"
                android:textSize="10sp"
                android:onClick="onClick"></TextView>

            <ImageView
                android:id="@+id/returnimg"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/close"
                android:onClick="returnimg"></ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">

            <ImageView
                android:id="@+id/calImg"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/label"
                android:layout_gravity="center"
                android:onClick="onClick"></ImageView>

            <TextView
                android:id="@+id/calTxt"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="写日程"
                android:textColor="#000000"
                android:textSize="10sp"
                android:onClick="onClick"></TextView>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
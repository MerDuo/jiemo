    <cn.edu.cdut.jiemo.diary.Top2View
        android:id="@+id/title_fragement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:top2_text="添加日程"
        app:top2_color="#778899"
        tools:ignore="MissingConstraints"></cn.edu.cdut.jiemo.diary.Top2View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/wenben"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"/>
        <EditText
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="标题"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/hui"/>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp">
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/shijian"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="55dp"
            android:background="@drawable/underline_text"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:text="全天"/>
        <Switch
            android:id="@+id/switchday"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"

            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/stwday"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="55dp"
            android:text="日期"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:background="@drawable/underline_text"
            />
        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginTop="13dp"
            android:textSize="20sp"
            android:layout_toLeftOf="@id/next1"/>
        <ImageView
            android:id="@+id/next1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/right"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="8dp"
            android:layout_alignParentRight="true"/>


    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/stwtime"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/time"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="55dp"
            android:text="时间"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:background="@drawable/underline_text"
            />
        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginTop="13dp"
            android:textSize="20sp"
            android:layout_toLeftOf="@id/next"/>
        <ImageView
            android:id="@+id/next"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/right"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="8dp"
            android:layout_alignParentRight="true"/>


    </RelativeLayout>
    <Button
        android:id="@+id/add"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="确认添加"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@drawable/sk_tbg"
        android:tag="skin:sk_tbg:background"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"

        />

</LinearLayout>
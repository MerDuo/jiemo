<?xml version="1.0" encoding="utf-8"?>
<!--加号按钮跳转页面-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100sp"
        android:orientation="horizontal"
        android:paddingTop="450dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints">



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/diaryImg1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:onClick="onClick"
                android:src="@drawable/handcount"
                android:tag="skin:handcount:src"
                ></ImageView>

            <TextView
                android:id="@+id/diaryTxt"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:onClick="onClick"
                android:text="写手账"
                android:textColor="#000000"
                android:textSize="10sp"></TextView>


        </LinearLayout>
        <ImageView
            android:id="@+id/returnimg"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:onClick="returnimg"
            android:src="@drawable/close"

            ></ImageView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/calImg1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:onClick="onClick"
                android:src="@drawable/label"
                android:tag="skin:label:src"
                ></ImageView>

            <TextView
                android:id="@+id/calTxt"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:onClick="onClick"
                android:text="写日程"
                android:textColor="#000000"
                android:textSize="10sp"></TextView>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
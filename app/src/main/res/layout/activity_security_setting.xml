    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mine.accountManage"
    android:background="#ffffff"
    >
<!--    <include layout="@layout/top3"></include>-->
    <cn.edu.cdut.jiemo.diary.Top2View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:id="@+id/title_fragement"
        app:top2_text="安全设置"
        app:top2_color="#778899">
    </cn.edu.cdut.jiemo.diary.Top2View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="60sp"
        >
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="60sp">
        <RelativeLayout
            android:id="@+id/img1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"

            android:layout_marginTop="5sp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/security"
                android:layout_marginLeft="20sp"></ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开启app密码"
                android:textColor="#000"
                android:gravity="center"
                android:layout_toLeftOf="@id/img2"
                tools:ignore="NotSibling"
                android:layout_marginLeft="80sp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5sp"></TextView>
            <Switch
                android:id="@+id/btn_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOn="开"
                android:textOff="关"
                tools:ignore="MissingConstraints,OnClick"
                android:layout_marginLeft="300sp"
                android:focusable="true"
                android:focusableInTouchMode="false"></Switch>



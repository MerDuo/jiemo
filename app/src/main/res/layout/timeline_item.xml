<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/headtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2019-12-05"
        android:paddingLeft="5dp"
        android:layout_marginTop="18dp"/>

    <RelativeLayout
        android:id="@+id/Timeline"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/headtime">

        <TextView
            android:id="@+id/tvTopLine"
            android:layout_width="0.5dp"
            android:layout_height="20dp"
            android:layout_centerHorizontal="true"
            android:background="#999" />

        <TextView
            android:id="@+id/tvDot"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_below="@id/tvTopLine"
            android:background="#999"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/line"
            android:layout_width="0.5dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/tvDot"
            android:background="#999" />


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/timeline_view"
        android:gravity="center"
        android:layout_margin="6dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/Timeline">

        <ImageView
            android:id="@+id/headimage"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"/>
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:text="this is a test"
            android:textSize="20sp"
            android:id="@+id/headtext"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>


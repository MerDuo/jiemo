<?xml version="1.0" encoding="utf-8"?>
<!--输入手账界面-->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff">

    <ImageView
        android:id="@+id/returnbtn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/left"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/share"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/date"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="- 九月十四日 星期六 -"
        android:textColor="#778899"
        android:textSize="17sp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/returnbtn"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/date"
        app:layout_constraintLeft_toLeftOf="parent"
        android:overScrollMode="never">

        <EditText
            android:id="@+id/edit_diary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="写下你的第一行日记"
            android:textColorHint="#7788"
            android:textSize="16sp"
            android:textColor="#000"
            android:background="@null"
            android:textCursorDrawable="@null"/>

    </ScrollView>

    <ImageView
        android:id="@+id/returnbtn1"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/returnbtn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="20dp"/>

    <ImageView
        android:id="@+id/font"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/font"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/returnbtn1"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="20dp"/>

    <ImageView
        android:id="@+id/fontsize"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/fontsize"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/font"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="20dp"/>

    <ImageView
        android:id="@+id/bcg"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/picture"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/fontsize"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="20dp"/>

    <ImageView
        android:id="@+id/save"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/bcg"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="20dp"/>

    <ImageView
        android:id="@+id/del"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/delete"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/save"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="20dp"/>

    <ImageView
        android:id="@+id/more"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/more"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/del"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="20dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>
